<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phieumuon_maphieumuon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:textStyle="bold|italic"
            android:id="@+id/phieumuon_trangthai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#B3FF0000"
            android:textSize="20sp" />

    </LinearLayout>


    <TextView
        android:textColor="@color/black"
        android:id="@+id/phieumuon_nguoimuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="người mượn :"
        android:textSize="20dp" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/phieumuon_tensach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="tên sách :"
        android:textSize="20dp" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/phieumuon_ngaymuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ngày mượn :"
        android:textSize="20dp" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/phieumuon_giamuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="giá mượn :"
        android:textSize="20dp" />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/phieumuon_thuthu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="thủ thư quản lý :"
        android:textSize="20dp" />




</LinearLayout>