<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:background="#fff">


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sach_txt_masach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mã sách :"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/sach_txt_tensach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tên sách :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sach_txt_giaThue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="giá thuê"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sach_txt_loaisach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Loại sách :"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sach_edit"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#3F51B5"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/sach_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="#E91E63"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>