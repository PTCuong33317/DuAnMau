<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    android:background="#fff">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/thanhvien_matv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mã TV :"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/thanhvien_ten_thanhvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tên TV :"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/thanhvien_namsinh_thanhvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Năm sinh TV :"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/thanhvien_cmnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="CMND :"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/thanhvien_update_thanhvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="update"
            android:textColor="#3F51B5"
            android:layout_marginRight="50dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/thanhvien_delete_thanhvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Delete"
            android:textColor="#F44336"
            android:textStyle="bold"
            />
    </LinearLayout>


</LinearLayout>